<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E3A59"
    android:orientation="vertical"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#6A1B3F"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/safe_word"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Centered Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/voice_recognition_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_safe_word"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            app:boxBackgroundMode="filled"
            app:boxBackgroundColor="#F5F5F5">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/safeWordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your safe word"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Confirm Button -->
        <Button
            android:id="@+id/confirm_button"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F8BBD0"
            android:paddingVertical="12dp"
            android:text="@string/confirm_button_text"
            android:textColor="@android:color/black" />

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F8BBD0"
            android:paddingVertical="12dp"
            android:text="@string/back"
            android:textColor="@android:color/black" />

    </LinearLayout>

</LinearLayout>