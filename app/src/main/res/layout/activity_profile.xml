<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8E3A59"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#6A1B3F"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="User Profile"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profileImagePreview"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:contentDescription="Profile Image"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_placeholder" />

        <!-- Name -->
        <TextView
            android:id="@+id/editName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dhriti Jagan Mohan"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/editEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dhriti@example.com"
            android:textColor="#FCE4EC"
            android:textSize="14sp" />

        <!-- Divider -->
        <View
            android:layout_width="315dp"
            android:layout_height="2dp"
            android:background="#FFFFFF"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#AD1457"
            android:paddingVertical="12dp"
            android:text="Edit Profile"
            android:textColor="#FFFFFF" />

        <!-- App Version -->
        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Version 1.0"
            android:textColor="#D3D3D3"
            android:textSize="12sp"
            android:layout_marginTop="150dp" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#000000"
            android:backgroundTint="#F8BBD0"
            android:layout_marginTop="12dp"
            android:paddingVertical="12dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#F8BBD0"
            android:text="@string/back"
            android:textColor="@android:color/black"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>